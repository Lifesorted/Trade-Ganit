    //Get save & continue button on compensation preference page
    public void getButtonList() {
    	List<WebElement> list = getDriver().findElements(By.xpath("//*[@data-stylename='mainButton']/descendant::*[@type='button']"));
		for (int i = 0; i < list.size(); i++) {
			
			if (list.get(i).getText().equalsIgnoreCase("Save & Continue")) {
				list.get(i).click();
			}
			
		}
   }
    
    public void refreshPage() {
    	getDriver().navigate().refresh();
    }
    
}
